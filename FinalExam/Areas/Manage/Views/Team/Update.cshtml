@using FinalExam.Areas.Manage.ViewModels.OurTeams;

@model UpdateTeamVM

<div class="row">
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Fullname</label>
            <input asp-for="FullName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="FullName" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Position" class="form-label">Position</label>
            <input asp-for="Position" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Position" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Facebook" class="form-label">Facebook</label>
            <input asp-for="Facebook" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Facebook" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Instagram" class="form-label">Instagram</label>
            <input asp-for="Instagram" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Instagram" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Twitter" class="form-label">Twitter</label>
            <input asp-for="Twitter" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Twitter" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Linkedin" class="form-label">Linkedin</label>
            <input asp-for="Linkedin" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Linkedin" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Image" class="form-label">Image</label>
            <input asp-for="Image" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
            <span asp-validation-for="Image" style="color:red"></span>
        </div>

        <div asp-validation-summary=ModelOnly></div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>